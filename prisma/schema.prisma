// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Products {
 id Int @default(autoincrement()) @id @unique
  name String
  price Int
  rating Float
  des String
  brand String
  image String[]
  discount Int?
  flashSale Boolean
  date String
  color String[] @default([])
  category String[]
}


model Banner{
  id Int @default(autoincrement()) @id @unique
  title String
  image String
  brand String
  price Int
}

model Users{
  id Int @default(autoincrement()) @id @unique
  name String
  email String @unique
  refresh_token String?
  created_at DateTime @default(now())
  password String
}

model Orders{
 id Int @default(autoincrement()) @id @unique
 user_id Int
 product_id Int
 total Int
 count Int
}
